<UserControl x:Class="EmpMgmtByMongo.UserControls.CreateControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EmpMgmtByMongo.UserControls"
             mc:Ignorable="d" 
            d:DesignHeight="500"
            d:DesignWidth="500">

    <Grid Background="WhiteSmoke">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
            <TextBlock Text="New Employee Record" FontSize="20" Background="#FF7E7227"/>
            <TextBlock Text="Name" FontSize="18"/>
            <TextBox Name="newEmpName" Height="25" Margin="0,10,0,0"/>
            <TextBlock Text="Company" FontSize="18"/>
            <TextBox Name="newEmpCompany" Height="25" Margin="0,10,0,0"/>
            <TextBlock Text="Position" FontSize="18"/>
            <TextBox Name="newEmpPosition" Height="25" Margin="0,10,0,0"/>
            <TextBlock Text="Salary" FontSize="18"/>
            <TextBox Name="newEmpSalary" Height="25" Margin="0,10,0,0"/>
            <Button Name="addNewEmpBtn" Height="30" Content="Add Record" HorizontalAlignment="Right" Margin="0,10,0,0" Click="addNewEmpBtn_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
